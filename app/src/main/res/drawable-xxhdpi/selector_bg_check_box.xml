<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/primaryColor"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/disabledButtonColor"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>

</selector>