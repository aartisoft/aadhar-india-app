<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="MyBlueTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyActionBarHeading" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryButtonTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyDisabledButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryButtonTextColor</item>
        <item name="android:background">@drawable/disabled_button_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyBlueButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryButtonTextColor</item>
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MySecondaryButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@color/secondaryButtonColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyEditTextTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/editTextTitleColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyOTPET" parent="OtpWidget.OtpView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MyEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#1e000000</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyHeadingTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyDisabledFormHeadingTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/disabledColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyFormHeadingTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/headingPopupTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyFormHeadingMessageTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/headingPopupMessageColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="errorEditTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyRadioSelected" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/bordered_bg_radio_selected</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyRadioNotSelected" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:background">@drawable/bordered_bg_radio_not_selected</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MyBluePopUpText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MyBigBlueTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.DatePicker" tools:ignore="NewApi">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@animator/fade_in</item>
        <item name="android:windowExitAnimation">@animator/fade_out</item>
    </style>

    <style name="popup_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="text_delete">
        <item name="android:shadowColor">#7F7F7F</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:text">Delete</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="ImageGroupNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ImageGroupBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/image_group_theme_primary</item>
        <item name="colorPrimaryDark">@color/image_group_theme_primary_dark</item>
        <item name="colorAccent">@color/image_group_widget</item>
    </style>


    <style name="MyBluePopUpButton" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyDisabledPopUpButton" parent="android:Widget.TextView">
        <item name="android:textColor">@color/disabledButtonColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/headingPopupTextColor</item>
    </style>



    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
