<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".member.coapplicant.CoApplicantFamilyActivity">

    <include layout="@layout/custom_action_bar"
        android:id="@+id/action_bar_layout"
        >
    </include>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_bg"
                android:layout_margin="24dp"
                android:padding="@dimen/margin_padding"

                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_father_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorEditTextAppearance"
                    app:helperTextEnabled="true"
                    android:singleLine="true"
                    android:baselineAligned="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_father_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="text"
                        style="@style/MyEditText"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mother_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorEditTextAppearance"
                    app:helperTextEnabled="true"
                    android:singleLine="true"
                    android:baselineAligned="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_mother_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="text"
                        style="@style/MyEditText"
                        />
                </android.support.design.widget.TextInputLayout>



            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentBottom="true"
                android:layout_margin="24dp"
                style="@style/MyBlueButton"
                android:id="@+id/continue_button"
                android:text="@string/action_continue"
                />

        </RelativeLayout>


</LinearLayout>