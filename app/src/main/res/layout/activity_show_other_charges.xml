<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".postapproval.ShowOtherChargesActivity">

    <include layout="@layout/custom_action_bar"
        android:id="@+id/action_bar_layout"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_bg"
                android:layout_margin="24dp"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/user_name"
                    android:layout_marginTop="12dp"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="center"

                    android:id="@+id/user_co"
                    android:layout_marginBottom="24dp"


                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_approved_loan"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/approved_loan_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_processing_fees"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/processing_fees_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:visibility="gone"
                    android:text="@string/hint_admin_charges"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:visibility="gone"
                    android:id="@+id/admin_charges_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_insurance_amount"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/insurance_amounts_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />



                <include layout="@layout/common_divider_view"
                    >
                </include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_disbursal_amount"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/disbursal_amount_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />


                <include layout="@layout/common_divider_view"
                    >
                </include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_emi_amont"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/emi_amount_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_first_emi_amount_indicative"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/first_emi_amount_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_emi_collection_date"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/emi_collection_date_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_interest_amount_indicative"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/interest_amount_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>