<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/user_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyFormHeadingMessageTextView"
            android:text="001"
            android:id="@+id/user_id_tv"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyFormHeadingTextView"
            android:text="001"
            android:drawableRight="@drawable/radio_button_on"
            android:id="@+id/user_name_tv"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding"
            style="@style/MyFormHeadingMessageTextView"
            android:text="001"
            android:id="@+id/user_address_tv"

            />

    </LinearLayout>


</LinearLayout>