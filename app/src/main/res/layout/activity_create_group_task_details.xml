<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".home.tasks.creategroup.CreateGroupTaskDetailsActivity">

    <include layout="@layout/custom_action_bar"
        android:id="@+id/action_bar_layout"
        >
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/user_layout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance_tv"
                android:text="17 kms Away"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                style="@style/MyFormHeadingMessageTextView"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyFormHeadingMessageTextView"
                android:id="@+id/city_tv"

                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyFormHeadingTextView"
            android:id="@+id/task_tv"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyFormHeadingMessageTextView"
            android:id="@+id/status_tv"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/by_tv"
                android:text="System"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                style="@style/MyFormHeadingMessageTextView"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyFormHeadingMessageTextView"
                android:id="@+id/date_tv"

                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyFormHeadingMessageTextView"
            android:id="@+id/notes_tv"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/user_layout"
        android:id="@+id/select_center_linear_layout"
        android:background="@drawable/bordered_bg"
        android:layout_margin="24dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/select_center_layout"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/radio_button_on"
                    android:id="@+id/arrow_image_view"
                    android:layout_alignParentRight="true"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="left"
                    android:id="@+id/select_center_tv"
                    android:text="@string/hint_select_center"
                    style="@style/MyFormHeadingTextView"

                    />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyFormHeadingMessageTextView"
                android:layout_gravity="left"
                android:text="@string/hint_user_phone"
                android:id="@+id/center_person_tv"
                android:visibility="gone"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyFormHeadingMessageTextView"
                android:layout_gravity="left"
                android:visibility="gone"
                android:text="@string/hint_address_line_1"
                android:id="@+id/center_person_address_tv"
                />

        </LinearLayout>





    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/member_count_layout"
            android:visibility="gone"
            android:layout_below="@id/select_center_linear_layout"
            android:background="@drawable/bordered_bg_task"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_task_center_detail"


                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="left"
                    android:id="@+id/center_detail_tv"
                    android:text=""
                    style="@style/MyFormHeadingTextView"

                    />



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/layout_bg_stroke"


                    ></FrameLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_task_number_of_members"


                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="left"
                    android:id="@+id/members_count_tv"
                    android:text=""
                    style="@style/MyFormHeadingTextView"

                    />








            </LinearLayout>





        </LinearLayout>

        <Button
            android:id="@+id/create_group_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:text="@string/action_task_create_group"
            android:layout_margin="24dp"
            style="@style/MyDisabledButton"
            android:enabled="false"

            />

    </RelativeLayout>




</LinearLayout>