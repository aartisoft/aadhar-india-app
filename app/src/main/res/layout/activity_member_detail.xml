<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".member.MemberDetailActivity">

    <include layout="@layout/custom_action_bar"
        android:id="@+id/action_bar_layout"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_bg"
                android:layout_margin="24dp"

                >

                <ImageView
                    android:layout_width="@dimen/profile_image_height"
                    android:layout_height="@dimen/profile_image_height"
                    android:layout_gravity="center"
                    android:src="@drawable/userimg_placeholder"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="12dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/user_name"
                    android:layout_marginTop="12dp"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="center"
                    android:id="@+id/user_co"


                    />

                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/call_btn_blue"
                        android:id="@+id/call_button"
                        android:clickable="false"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="24dp"
                        android:layout_alignParentRight="true"
                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyFormHeadingMessageTextView"
                        android:layout_gravity="left"
                        android:text="@string/hint_user_phone"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/user_phone_no"
                        style="@style/MyFormHeadingTextView"


                        />

                </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_button_on"
                        android:layout_alignParentRight="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:layout_gravity="left"
                        android:id="@+id/applicant_tv"
                        android:text="@string/hint_applicant"
                        android:enabled="false"
                        style="@style/MyDisabledFormHeadingTextView"

                        />


                </RelativeLayout>

                <include layout="@layout/common_divider_view">
                </include>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_button_on"
                            android:layout_alignParentRight="true"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="35dp"
                            android:layout_gravity="left"
                            android:id="@+id/co_applicant_tv"
                            android:text="@string/hint_co_applicant"
                            android:enabled="false"
                            style="@style/MyDisabledFormHeadingTextView"

                            />


                    </RelativeLayout>



                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_button_on"
                        android:layout_alignParentRight="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:layout_gravity="left"
                        android:id="@+id/income_tv"
                        android:text="@string/hint_income"
                        android:enabled="false"
                        style="@style/MyDisabledFormHeadingTextView"

                        />


                </RelativeLayout>


                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_button_on"
                        android:layout_alignParentRight="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:layout_gravity="left"
                        android:id="@+id/expenses_tv"
                        android:text="@string/hint_expenses"
                        android:enabled="false"
                        style="@style/MyDisabledFormHeadingTextView"

                        />


                </RelativeLayout>

                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_button_on"
                        android:layout_alignParentRight="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:layout_gravity="left"
                        android:id="@+id/signing_tv"
                        android:text="@string/hint_declaration"
                        android:enabled="false"
                        style="@style/MyDisabledFormHeadingTextView"

                        />


                </RelativeLayout>


                <include layout="@layout/common_divider_view">
                </include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_button_on"
                        android:layout_alignParentRight="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:layout_gravity="left"
                        android:id="@+id/rating_tv"
                        android:text="@string/hint_rating"
                        android:enabled="false"
                        style="@style/MyDisabledFormHeadingTextView"

                        />


                </RelativeLayout>

                <include layout="@layout/common_divider_view"
                  >
                </include>
                
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>