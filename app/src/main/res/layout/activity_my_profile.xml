<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProfileActivity">


    <include layout="@layout/custom_action_bar"
        android:id="@+id/action_bar_layout"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_bg"
                android:layout_margin="24dp"

                >

                <ImageView
                    android:layout_width="@dimen/profile_image_height"
                    android:layout_height="@dimen/profile_image_height"
                    android:layout_gravity="center"
                    android:src="@drawable/userimg_placeholder"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="12dp"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/user_name"
                    android:layout_marginTop="12dp"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="center"
                    android:id="@+id/user_id"
                    android:layout_marginBottom="24dp"


                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_user_phone"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/phone_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/zxing_contents_email"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/email_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />




                <include layout="@layout/common_divider_view">
                </include>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MyFormHeadingMessageTextView"
                    android:layout_gravity="left"
                    android:text="@string/hint_address"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    style="@style/MyFormHeadingTextView"
                    android:id="@+id/address_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"


                    />


                <include layout="@layout/common_divider_view"
                    >
                </include>





                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>